<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="28dp">


    <ImageView
        android:id="@+id/iv_item_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_penguin1_after"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="기본ver"
        android:textAppearance="@style/TextAppearance.AppCompat.sub_title"
        android:textColor="@color/color_gray_900"
        app:layout_constraintEnd_toEndOf="@id/iv_item_store"
        app:layout_constraintStart_toStartOf="@id/iv_item_store"
        app:layout_constraintTop_toBottomOf="@id/iv_item_store" />
</androidx.constraintlayout.widget.ConstraintLayout>