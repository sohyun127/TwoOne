<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_store_tool_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_store_toolbar"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12코인"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.sub_title"
            android:textColor="@color/color_gray_900"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="18dp" />

    </androidx.appcompat.widget.Toolbar>


    <View
        android:id="@+id/view_store_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_400"
        app:layout_constraintTop_toBottomOf="@id/tb_store_tool_Bar" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_store_line"
        app:spanCount="3"
        tools:listitem="@layout/item_store" />

</androidx.constraintlayout.widget.ConstraintLayout>